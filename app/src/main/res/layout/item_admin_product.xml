<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="2dp"
    android:id="@+id/layoutItemAdmin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8C9CC"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_product_admin"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pro1"
            />

        <LinearLayout
            android:id="@+id/layout_content_admin"
            android:layout_toEndOf="@+id/img_product_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/item_name_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giyuuuu"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_price_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="850.000Ä‘"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/layout_content_admin"
            android:layout_marginStart="50dp"
            >

            <ImageView
                android:id="@+id/editBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/my_button"
                android:layout_marginEnd="10dp"
                android:src="@drawable/edit_icon"/>

            <ImageView
                android:id="@+id/removeBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/my_remove_btn"
                android:src="@drawable/remove_icon"/>
        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>